{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "ğŸ†• **New Microsoft 365 Roadmap Item** ğŸ“¢",
          "weight": "Bolder",
          "size": "Medium",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "@{triggerOutputs()?['body/title']}",
          "weight": "Bolder",
          "size": "Medium",
          "spacing": "Small",
          "wrap": true
        },
        {
          "type": "Container",
          "style": "emphasis",
          "items": [
            {
              "type": "TextBlock",
              "text": "ğŸ“Œ Status: @{outputs('Rollout_Status')}",
